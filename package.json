{
  "name": "grunt-mocha-cli",
  "version": "4.0.0",
  "description": "Run Mocha server-side tests in Grunt.",
  "author": "Roland Warmerdam (https://roland.codes)",
  "keywords": [
    "gruntplugin",
    "mocha"
  ],
  "repository": "Rowno/grunt-mocha-cli",
  "license": "MIT",
  "main": "tasks/mochacli.js",
  "files": [
    "lib",
    "tasks"
  ],
  "scripts": {
    "test": "eslint '**/*.js' && ava"
  },
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "mocha": "^6.0.0"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-xo": "^0.27.2",
    "execa": "^3.2.0",
    "grunt": "^1.0.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mz": "^2.7.0",
    "prettier": "^1.9.1",
    "should": "^13.1.3",
    "tempy": "^0.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo/esnext",
      "prettier"
    ],
    "env": {
      "node": true
    }
  },
  "ava": {
    "helpers": [
      "**/fixtures/**/*"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
